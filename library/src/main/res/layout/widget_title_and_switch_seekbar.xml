<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/textViewWidgetTitleAndSwitchSeekBarTitle"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TITLE" />

    <TextView
        android:id="@+id/textViewWidgetTitleAndSwitchSeekBarSubtitle"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:gravity="end|center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/seekBarSwitchWidgetTitleAndSwitchSeekBar"
        app:layout_constraintEnd_toStartOf="@id/seekBarSwitchWidgetTitleAndSwitchSeekBar"
        app:layout_constraintTop_toTopOf="@+id/seekBarSwitchWidgetTitleAndSwitchSeekBar"
        tools:text="SUBTITLE" />

    <com.suke.widget.SwitchButton
        android:id="@+id/seekBarSwitchWidgetTitleAndSwitchSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewWidgetTitleAndSwitchSeekBarTitle" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/seekBarGroupWidgetTitleAndSwitchSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="textViewWidgetTitleAndSwitchSeekBarSeekBarValue,textViewWidgetTitleAndSwitchSeekBarUnits,seekBarWidgetTitleAndSwitchSeekBar" />

    <TextView
        android:id="@+id/textViewWidgetTitleAndSwitchSeekBarSeekBarValue"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="end"
        app:layout_constraintEnd_toStartOf="@+id/textViewWidgetTitleAndSwitchSeekBarUnits"
        app:layout_constraintTop_toBottomOf="@+id/seekBarSwitchWidgetTitleAndSwitchSeekBar"
        tools:text="VALUE" />

    <TextView
        android:id="@+id/textViewWidgetTitleAndSwitchSeekBarUnits"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewWidgetTitleAndSwitchSeekBarSeekBarValue"
        tools:text="UNITS" />

    <com.kenargo.compound_widgets.WidgetMinMaxSeekBar
        android:id="@+id/seekBarWidgetTitleAndSwitchSeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWidgetTitleAndSwitchSeekBarSeekBarValue" />

</androidx.constraintlayout.widget.ConstraintLayout>