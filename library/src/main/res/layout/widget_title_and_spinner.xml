<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewWidgetTitleAndSpinnerTitle"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TITLE" />

    <TextView
        android:id="@+id/textViewWidgetTitleAndSpinnerSubtitle"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/textViewWidgetTitleAndSpinnerTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewWidgetTitleAndSpinnerTitle"
        tools:text="SUBTITLE" />

    <com.ashraf007.expandableselectionview.ExpandableSingleSelectionView
        android:id="@+id/expandableSingleSelectionViewWidgetTitleAndSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textViewWidgetTitleAndSpinnerSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewWidgetTitleAndSpinnerTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>